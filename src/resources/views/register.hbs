<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cook Hub - Đăng ký</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/raw.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="bg-black">
        <div class="bg-form">
            <form id="form-register" method="POST" action="">
                <div class="text-center">
                    <h3 class="form-title">Đăng ký thành viên</h3>
                    <p class="desc">Let's cook!!!</p>
                    <hr>
                </div>
                <div class="form-group">
                    <label class="form-label" for="username">Tên đăng nhập</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" value="{{#if values}}{{values.username}}{{/if}}">
                    <span class="form-message">
                        {{#if message}}
                            {{message}}
                        {{/if}}
                    </span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="fullname">Họ và tên</label>
                    <input type="text" class="form-control" id="fullname" name="fullname"
                        placeholder="Fullname" value="{{#if values}}{{values.fullname}}{{/if}}">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <div class="form-gender">
                        <label class="form-label" for="gender" value="{{#if values}}{{values.gender}}{{/if}}">Giới tính</label>
                        <div class="gender">
                            <input type="radio" name="gender" class="form-control" value="male">Nam
                        </div>
                        <div class="gender">
                            <input type="radio" name="gender" class="form-control" value="female">Nữ
                        </div>
                        <div class="gender">
                            <input type="radio" name="gender" class="form-control" value="other">Khác
                        </div>
                    </div>
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="{{#if values}}{{values.email}}{{/if}}">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="confirm">Nhập lại mật khẩu</label>
                    <input type="password" class="form-control" id="confirm" name="confirm"
                        placeholder="Confirm Password">
                    <span class="form-message "></span>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="check" name="check">
                    <label class="form-check-label" for="check">Tôi không phải người máy</label> <br>
                    <span class="form-message"></span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary btn-form">Đăng ký</button>
                </div>
            </form>
            <hr>
            <p>Bạn đã có tài khoản? <a href="/account/login">Đăng nhập ngay.</a></p>
            <p>Quay lại <a href="/">Trang chủ.</a></p>
        </div>
    </div>

    <script src="/javascripts/validator.js"></script>
    <script>
        Validator({
            form: '#form-register',
            formMessage: '.form-message',
            formGroupSelector: '.form-group',
            rules: [
                Validator.isRequired('#username'),
                Validator.isRequired('#fullname'),
                Validator.isRequired('#email'),
                Validator.isEmail('#email'),
                Validator.isRequired('#password'),
                Validator.minLen('#password', 6),
                Validator.isRequired('#confirm'),
                Validator.isConfirm('#confirm', function () {
                    return document.querySelector('#form-register #password').value;
                }, 'Mật khẩu nhập vào không chính xác!!!'),
                // Validator.isChecked('#check',function(){
                //     return document.querySelector('#form-register #check').checked;
                // }, 'Bạn phải xác nhận trường này!!!'),
                // Validator.isChecked('input[name="gender"]', function(){
                //     var arr = Array.from(document.querySelectorAll('input[name="gender"]'));
                //     var check=false;
                //     for(var i=0; i<arr.length; i++){
                //         if(arr[i].checked)check=true;
                //     }
                //     return check;
                // }),
                Validator.isRequired('#check', 'Trường này là bắt buộc!!!'), //type checkbox
                Validator.isRequired('input[name="gender"]', 'Trường này là bắt buộc!!!'), //type radio
            ],
             //onSubmit: function (data) {
              // console.log(data);
            //}
        });

    </script>
</body>

</html>