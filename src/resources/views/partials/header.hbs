<div class="container-fluid content-header flex justify-between items-center header">
    <div class="logo">
        <a href="/"><img src="/img/cover.png" alt=""></a>
    </div>
    <div class="mr-auto ml-3 ">
        <form class="flex form-search-header " action="" method="GET">
            <input type="text" class="append-button" autocapitalize="off" autocomplete="off" placeholder="Search">
            <button class="btn-search-header" type="button"><svg width="1em" height="1em" viewBox="0 0 16 16"
                    class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                    <path fill-rule="evenodd"
                        d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                </svg>
            </button>
        </form>
    </div>
    <div class="account-options" style="display: flex; margin-top:-13px; font-size: 20px">
        <a href="/post/create">Đăng bài</a>
        {{#if localIsAuthenticated}}
        <img src="{{localAuthUser.avatar}}" alt="" style="height: 50px; padding-right:10px;">
        <div>
            <h4>Xin chào,{{localAuthUser.fullname}}</h4>
            <a href="/account/{{localAuthUser._id}}/edit?type=password">Đổi mật khẩu</a>
            /
            <a href="/account/logout">Đăng xuất</a>
        </div>
        {{else}}
        <a class="btn " href="/account/register">Tạo tài khoản</a>
        <a class="btn " href="/account/login">Đăng nhập</a>
        {{/if}}
    </div>
</div>